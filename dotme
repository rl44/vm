
for d in . .. ../.. ../../.. vm-info4 ../vm-info4 ../../vm-info4
do
	if test -r $d/dotme
	then
		VM_BASE="$(cd $d ; pwd)"
	fi
done

if test "$VM_BASE" = ''
then
	echo dotme introuvable >&2
fi

if echo "$PATH" | grep -q ^"$VM_BASE/bin"
then
	true
else
	PATH="$VM_BASE/bin:$PATH"
fi

PERLLIB="$VM_BASE"
ARCH="$(arch)"

if test -w /dev/kvm
then
	VM_ENGINE=kvm
else
	VM_ENGINE=qemu
	echo /dev/kvm non disponible ou non accessible
	echo qemu sera utilis√©
fi

export ARCH VM_BASE PATH PERLLIB VM_ENGINE

echo "VM_BASE=$VM_BASE"
echo "ARCH=$ARCH"
echo "VM_ENGINE=$VM_ENGINE"
echo


